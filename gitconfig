[user]
    name = Wojciech Ogrodowczyk
    email = wojciech@brainsandbeards.com
[core]
    editor = vim
    autocrlf = input
    safecrlf = false
    excludesfile = ~/.gitignore
    whitespace = trailing-space,space-before-tab
[push]
    default = current
[apply]
    whitespace = nowarn
[alias]
    co = checkout
    pr = pull --rebase --prune
    ignored = "!git ls-files --others --exclude-standard"
    nb = checkout -b
    db = !sh -c 'git branch -D "$0" && git push origin ":$0"' &> /dev/null
    pending = !git --no-pager log origin/master..master && echo
    missing = !sh -c 'git cherry "$0" | cut -sd + -f 2 | xargs "git show"'
    conflicts = !git ls-files --unmerged | cut -c51- | sort -u | xargs $EDITOR
    resolve = !git ls-files --unmerged | cut -c51- | sort -u | xargs git add
    unstage = reset HEAD
    ls = log --graph --pretty=format:'%C(yellow)%d%Creset %s %Cgreen(%h, %an, %cr)%Creset' --abbrev-commit --date=relative
    ll = log --decorate --numstat
    lf = log --decorate -u
    d = diff --word-diff --color-words
    ba = branch -a
    bd = branch -D
    wip = commit -am 'WIP'
    unwip = "reset HEAD^"
    assume   = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed  = "!git ls-files -v | grep ^h | cut -c 3-"
    pf = push --force-with-lease
    ra = rebase --abort
    rc = rebase --continue
    ri = rebase --interactive
    rh = reset --hard
[color]
    ui = auto
    branch = auto
[color "status"]
    added = blue
    changed = yellow
    untracked = white
[color "diff"]
    meta = white
    frag = magenta
    old = red
    new = green
[mirror]
    summary = true
[branch]
    autosetupmerge = true
    autosetuprebase = remote
[merge]
	tool = p4mergetool
[mergetool "splice"]
    cmd = "mvim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true
[advice]
    pushNonFastForward = false
    statusHints = false
[diff]
    renames = copies
    mnemonicprefix = true
    algorithm = patience
[rerere]
	enabled = false

[mergetool]
	keepTemporaries = false
	prompt = false
	keepBackup = false
[mergetool "p4mergetool"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $PWD/$BASE $PWD/$REMOTE $PWD/$LOCAL $PWD/$MERGED
	trustExitCode = false
