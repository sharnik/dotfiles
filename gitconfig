[user]
    name = Wojciech Ogrodowczyk
    email = wojtek@7tonlnu.pl
[core]
    editor = vim
    autocrlf = input
    safecrlf = false
    excludesfile = ~/.gitignore
    whitespace = trailing-space,space-before-tab
[push]
    default = tracking
[apply]
    whitespace = nowarn
[alias]
    co = checkout
    pr = pull --rebase --prune
    ignored = "!git ls-files --others --exclude-standard"
    nb = checkout -b
    db = !sh -c 'git branch -D "$0" && git push origin ":$0"' &> /dev/null
    pending = !git --no-pager log origin/master..master && echo
    missing = !sh -c 'git cherry "$0" | cut -sd + -f 2 | xargs "git show"'
    conflicts = !git ls-files --unmerged | cut -c51- | sort -u | xargs $EDITOR
    resolve = !git ls-files --unmerged | cut -c51- | sort -u | xargs git add
    unstage = reset HEAD
    lg = log --graph --pretty=format:'%C(yellow)%d%Creset %s %Cgreen(%h, %an, %cr)%Creset' --abbrev-commit --date=relative
    d = diff --word-diff --color-words
    ba = branch -a
    wip = commit -am 'WIP'
    assume   = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed  = "!git ls-files -v | grep ^h | cut -c 3-"
[color]
    ui = auto
    branch = auto
[color "status"]
    added = blue
    changed = yellow
    untracked = white
[color "diff"]
    meta = white
    frag = magenta
    old = red
    new = green
[mirror]
    summary = true
[branch]
    autosetupmerge = true
    autosetuprebase = remote
[merge]
    tool = splice
[mergetool "splice"]
    cmd = "mvim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true
[advice]
    pushNonFastForward = false
    statusHints = false
[diff]
    renames = copies
    mnemonicprefix = true
    algorithm = patience
[rerere]
    enabled = true
